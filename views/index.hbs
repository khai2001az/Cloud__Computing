<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="css/grid.css">
    <title>Index</title>
</head>

<body>
    <h1 class="product-title">Product</h1>
    <h2 class="user-title">HELLO {{auth.role}} </h2>
    {{!-- <form class="search__btn" action="/search" method="post">
        <input type="text" name="txtSearch">
        <input type="submit" value="Search">
    </form> --}}

    <form class="d-flex  search" action="/search" method="post">
        <input class="form-control " type="search" placeholder="Search" aria-label="Search" name="txtSearch">
        <button class="btn btn-outline-secondary" type="submit" value="Search">Search</button>
    </form>
   
            <div class="navigation ">


                <form action="/insert" method="post">
                    <div class="input-group ">
                        <span class="input-group-text" id="basic-addon1">Name</span>
                        <input type="text" name="txtName" class="form-control" placeholder="Product Name"
                            aria-label="Name" aria-describedby="basic-addon1">

                    </div>
                    <div style="color:red">{{errorMsg}}</div>

                    <div class="input-group ">
                        <input type="text" name="txtTuoi" class="form-control" placeholder="Cost"
                            aria-label="Amount (to the nearest dollar)">
                        <span class="input-group-text">$</span>
                    </div>
                    <div style="color:red">{{errorMsg}}</div>

                    <div class="input-group ">
                        <span class="input-group-text" id="basic-addon3">https://...</span>
                        <input type="text" name="txtPicture" class="form-control" id="basic-url"
                            aria-describedby="basic-addon3" placeholder="URL">
                    </div>
                    <div style="color:red">{{errorMsg}}</div>
                    <input class="input" type="submit" value="Insert">

                </form>

            </div>
            <div class="tablecotent l-10">
                <table class="table table-light">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Cost</th>
                            <th scope="col">Img</th>
                            <th scope="col">Option</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{tuoi}}</td>
                            <td><img src="{{picture}}" width="150px" height="100px"></td>
                            <td><a href="/edit?id={{_id}}">Edit</a> <br> <a href="/delete?id={{_id}}"
                                    onclick="return confirm('Are you sure')">Delete</a></td>
                            <td></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>



    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"
        integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"
        integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/"
        crossorigin="anonymous"></script>
</body>

</html>